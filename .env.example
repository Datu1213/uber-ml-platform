# Uber ML Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=uber_ml
POSTGRES_PASSWORD=uber_ml_pass
POSTGRES_DATABASE=ml_platform

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# KAFKA
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9094
KAFKA_RIDER_EVENTS_TOPIC=rider.events
KAFKA_DRIVER_EVENTS_TOPIC=driver.events
KAFKA_TRIP_EVENTS_TOPIC=trip.events

# =============================================================================
# MLFLOW
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=./mlruns
MLFLOW_REGISTRY_URI=

# =============================================================================
# FEAST FEATURE STORE
# =============================================================================
FEAST_REGISTRY_PATH=feature_store/feature_repo/feature_store.yaml
FEAST_ONLINE_STORE_TYPE=redis
FEAST_OFFLINE_STORE_TYPE=postgresql

# =============================================================================
# RAY
# =============================================================================
RAY_ADDRESS=
RAY_NUM_CPUS=
RAY_NUM_GPUS=
RAY_DASHBOARD_PORT=8265

# =============================================================================
# MODEL SERVING
# =============================================================================
SERVING_HOST=0.0.0.0
SERVING_PORT=8000
SERVING_WORKERS=4
SERVING_RELOAD=false

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
FEATURE_DRIFT_THRESHOLD=0.1
PREDICTION_DRIFT_THRESHOLD=0.15

# =============================================================================
# GOVERNANCE
# =============================================================================
ENABLE_AUDIT_LOGGING=true
REQUIRE_APPROVAL=true
DATA_RETENTION_DAYS=90
ENABLE_ENCRYPTION=true

# =============================================================================
# AWS CREDENTIALS
# =============================================================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=uber-ml-artifacts

# =============================================================================
# AIRFLOW
# =============================================================================
AIRFLOW_FERNET_KEY=your-fernet-key-here
AIRFLOW_SECRET_KEY=your-secret-key-here
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://uber_ml:uber_ml_pass@localhost:5432/ml_platform

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=change-me-in-production-use-long-random-string
GRAFANA_ADMIN_PASSWORD=admin
